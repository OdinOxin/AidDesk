<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>

<fx:root type="javafx.scene.layout.StackPane"
         xmlns:fx="http://javafx.com/fxml">

    <HBox style="-fx-border-color: #C4C4C4; -fx-border-radius: 5">
        <padding>
            <Insets top="25"/>
        </padding>
        <Label fx:id="lblDetails">
            <padding>
                <Insets left="5" top="10" right="5" bottom="5"/>
            </padding>
        </Label>
    </HBox>

    <HBox>
        <TextField fx:id="txfRefBox"
                   HBox.hgrow="ALWAYS"/>

        <Button fx:id="btnRefBox"
                minWidth="35"
                maxWidth="35"
                text="&#128269;"
                HBox.hgrow="NEVER"/>
    </HBox>

</fx:root>